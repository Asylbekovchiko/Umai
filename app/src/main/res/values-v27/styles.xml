<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="titleTextColor">@color/titleTextColor</item>

    </style>


    <style name="DarkTheme" parent="AppTheme"
        >

        <item name="subTitleTextColor">@color/subTitleTextColor</item>

    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColor">#FFFFFF</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="subTitleTextColor">@color/subTitleTextColor</item>

    </style>

</resources>