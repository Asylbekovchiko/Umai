<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="descriptionTextColor">@color/descriptionTextColor</item>
        <item name="subTitleTextColor">@color/subTitleTextColor</item>
        <item name="buttonActiveTextColor">@color/buttonActiveTextColor</item>
        <item name="buttonInActiveTextColor">@color/buttonInActiveColor</item>
    </style>


    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="descriptionTextColor">@color/descriptionTextColor</item>
        <item name="subTitleTextColor">@color/subTitleTextColor</item>
    </style>


    <style name="SplashScreen" parent="AppTheme">
        <item name="android:statusBarColor">#000000</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="titleTextColor">#FFFFFF</item>
        <item name="backgroundColor">#000000</item>
        <item name="subTitleTextColor">#FFFFFF</item>
    </style>


    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColor">#FFFFFF</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="subTitleTextColor">@color/subTitleTextColor</item>

    </style>


    <style name="TitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>

    </style>


    <style name="SubTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/subTitleTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

 <style name="DescriptionTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/descriptionTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ActiveButtonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/buttonActiveTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MyDatePickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/date_picker_background</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.buttonBarPositiveButtonStyle
        </item>

    </style>


    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DatePickerTheme.buttonBarPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

</resources>