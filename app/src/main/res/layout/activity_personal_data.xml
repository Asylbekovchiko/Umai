<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.more.personal_data.PersonalDataActivity"
        android:background="?attr/backgroundColor">

        <include
            android:id="@+id/toolbar_personal_data"
            layout="@layout/toolbar_back"
            ></include>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="136dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar_personal_data"
            android:src="@drawable/ic_personal_data" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_name"
            android:layout_width="360dp"
            android:layout_height="72dp"
            android:layout_marginTop="56dp"
            android:clickable="true"
            android:onClick="setName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">


            <TextView
                android:id="@+id/name_label"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Имя"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_change_name"
                app:layout_constraintVertical_bias="0.0"></TextView>

            <TextView
                android:id="@+id/var_name"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Александр"
                android:textAppearance="@style/Black_Regular_17"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name_label"
                app:layout_constraintVertical_bias="0.627"></TextView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_second_name"
            android:layout_width="360dp"
            android:layout_height="72dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:onClick="setSecondName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_change_name">


            <TextView
                android:id="@+id/second_name_label"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Фамилия"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_second_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_change_second_name"
                app:layout_constraintVertical_bias="0.0"></TextView>

            <TextView
                android:id="@+id/var_second_name"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Морозов"
                android:textAppearance="@style/Black_Regular_17"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_second_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/second_name_label"
                app:layout_constraintVertical_bias="0.627"></TextView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_number"
            android:layout_width="360dp"
            android:layout_height="72dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:onClick="setNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_change_second_name">


            <TextView
                android:id="@+id/number"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Номер"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_change_number"
                app:layout_constraintVertical_bias="0.0"></TextView>

            <TextView
                android:id="@+id/var_number"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="996700999888"
                android:textAppearance="@style/Black_Regular_17"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/number"
                app:layout_constraintVertical_bias="0.627"></TextView>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_email"
            android:layout_width="360dp"
            android:layout_height="72dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:onClick="setEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_change_number">


            <TextView
                android:id="@+id/email"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Электронная почта"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_change_email"
                app:layout_constraintVertical_bias="0.0"></TextView>

            <TextView
                android:id="@+id/var_email"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Добавить почту"
                android:textAppearance="@style/Black_Regular_17"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/email"
                app:layout_constraintVertical_bias="0.627"></TextView>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_right_primary" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_change_location"
            android:layout_width="360dp"
            android:layout_height="72dp"
            android:layout_marginTop="84dp"
            android:clickable="true"
            android:onClick="setEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_change_number">


            <TextView
                android:id="@+id/location"
                android:layout_width="324dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="Местоположение"
                app:layout_constraintBottom_toBottomOf="@+id/layout_change_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_change_location"
                app:layout_constraintVertical_bias="0.083"></TextView>


