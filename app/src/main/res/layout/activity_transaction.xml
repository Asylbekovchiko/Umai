<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="viewModel"
            type="ru.mitapp.umai.ui.home.main.transactions.viewmodel.TransactionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        tools:context=".ui.home.main.transactions.activities.TransactionActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/transaction_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/backgroundColor"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:navigationIcon="@drawable/ic_arrow_back_24"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Перевод средсв"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/Black_Bold_22"
                        android:textColor="?attr/titleTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_perconal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/personal_account"
                        android:textAppearance="@style/Black_Regular_17"
                        android:textColor="?attr/titleTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_transaction"
                        app:layout_constraintVertical_bias="0.0" />

                    <br.com.sapereaude.maskedEditText.MaskedEditText
                        android:id="@+id/edt_personal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:ems="10"
                        android:hint="@string/xxxx_xxxx_xxxx_xxxx"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="17dp"
                        android:background="@{viewModel.isPersonalActive() ?  @drawable/edt_active : @drawable/edt_not_active}"
                        android:textAppearance="@style/LightGray_Regular_16"
                        android:textColor="?attr/titleTextColor"
                        android:textColorHint="?attr/titleTextColor"
                        android:textSize="16sp"
                        app:keep_hint="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_perconal"
                        app:layout_constraintVertical_bias="0.0"
                        mask:allowed_chars="123456789012"
                        mask:char_representation="x"
                        mask:mask="xxxx-xxxx-xxxx-xxxx" />

                    <TextView
                        android:id="@+id/txt_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/sum"
                        android:textAppearance="@style/Black_Regular_17"
                        android:textColor="?attr/titleTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/edt_personal"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/edt_personal"
                        app:layout_constraintTop_toBottomOf="@+id/edt_personal"
                        app:layout_constraintVertical_bias="0.0" />

                    <EditText
                        android:id="@+id/edt_sum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:ems="10"
                        android:hint="@string/sum_zero"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:padding="17dp"
                        android:background="@{viewModel.isSumActive() ?  @drawable/edt_active : @drawable/edt_not_active}"
                        android:textAppearance="@style/LightGray_Regular_16"
                        android:textColor="?attr/titleTextColor"
                        android:textColorHint="?attr/titleTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_sum"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Выбрать карту"
                        android:textAppearance="@style/Black_Regular_17"
                        android:textColor="?attr/titleTextColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/edt_sum"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/edt_sum"
                        app:layout_constraintTop_toBottomOf="@+id/edt_sum"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/pay_method"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:background="@drawable/edt_not_active"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <ImageView
                            android:id="@+id/image_wallet_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_walete_primary" />

                        <TextView
                            android:id="@+id/text_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="540"
                            android:textAppearance="@style/Black_Regular_17"
                            android:textColor="?attr/titleTextColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/image_wallet_second"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.207" />

                        <TextView
                            android:id="@+id/text_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Кошелек UMAI **** 2487"
                            android:textAppearance="@style/LightGray_Regular_14"
                            android:textColor="?attr/subTitleTextColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/text_sum"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/text_sum"
                            app:layout_constraintTop_toBottomOf="@+id/text_sum"
                            app:layout_constraintVertical_bias="0.521" />

                        <TextView
                            android:id="@+id/txt_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="сом"
                            android:textAppearance="@style/Black_Regular_14"
                            android:textColor="?attr/titleTextColor"
                            app:layout_constraintBottom_toBottomOf="@+id/text_sum"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/text_sum"
                            app:layout_constraintTop_toTopOf="@+id/text_sum"
                            app:layout_constraintVertical_bias="0.50" />

                        <ImageView
                            android:id="@+id/image_more_wallets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="21dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_icon_more_down" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:background="@{viewModel.isButtonActive() ? @drawable/bg_active_button : @drawable/bg_in_active_button}"
            android:clickable="@{viewModel.isButtonActive()}"
            android:text="Далее"
            android:textAppearance="@style/Black_medium_16"
            android:textColor="?attr/titleTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>