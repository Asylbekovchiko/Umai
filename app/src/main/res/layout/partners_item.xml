<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        android:padding="500dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:layout_marginTop="8dp"
            >


            <TextView
                android:id="@+id/titlePartners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Beeline"
                android:textAppearance="@style/Black_Regular_17"
                app:layout_constraintStart_toEndOf="@+id/imagePartners"
                app:layout_constraintTop_toTopOf="@+id/imagePartners" />

            <TextView
                android:id="@+id/descriptionPartners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/LightGray_Regular_14"
                android:text="Платежная система"
                app:layout_constraintStart_toEndOf="@+id/imagePartners"
                app:layout_constraintTop_toBottomOf="@+id/titlePartners" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePartners"
                android:layout_width="50dp"
                android:background="@drawable/bg_primary_oval"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_bank_marker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>